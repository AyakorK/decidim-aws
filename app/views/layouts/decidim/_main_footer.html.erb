<div class="main-footer">
  <div class="custom-footer">
    <div class="custom-footer-top">
      <%= image_tag current_organization.official_img_footer.url.to_s , alt: current_organization.name, class: "official_img_footer" %>
    </div>
    <div class="custom-separator">
      <span></span><span></span><span></span>
    </div>
    <div class="custom-footer-bottom">
      <% if current_organization.official_url? %>
        <%= link_to current_organization.official_url, class: "official_url" do %>
          <%= t("layouts.decidim.footer.official_url") %>&nbsp;&nbsp;<%= icon "chevron-right" %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <ul class="main__footer__nav footer-nav">
      <% if current_organization.static_pages.any? %>
        <% static_page_topics_in_footer.each do |page_topic| %>
          <% if page_topic.pages.any? %>
            <li><%= link_to translated_attribute(page_topic.title), decidim.page_path(page_topic.pages.first) %></li>
          <% end %>
        <% end %>

        <% static_pages_in_footer.each do |page| %>
          <li><%= link_to translated_attribute(page.title), decidim.page_path(page) %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
